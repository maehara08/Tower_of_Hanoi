<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.riku.tower_of_hanoi.MainGame_Activity"
    android:id="@+id/jn">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="230dp"
                android:layout_weight="1"
                android:paddingLeft="0dp"
                android:layout_marginTop="220dp"
                android:weightSum="1"
                android:paddingTop="30dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:id="@+id/tumi1"
                    android:src="@drawable/tumi1"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="30dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical"
                    android:onClick="tumi1"
                    android:clickable="false" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:id="@+id/tumi2"
                    android:src="@drawable/tumi2"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="23dp"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:onClick="tumi2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:id="@+id/tumi3"
                    android:src="@drawable/tumi3"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="false"
                    android:layout_gravity="center_horizontal"
                    android:onClick="tumi3"
                    android:clickable="true" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:paddingLeft="22dp"
                android:layout_marginTop="190dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/imageView4"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/imageView5"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:id="@+id/tumi6"
                    android:adjustViewBounds="true"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:paddingLeft="22dp"
                android:layout_marginTop="190dp">

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="297dp"
            android:scaleType="fitXY"
            android:layout_marginTop="0dp"
            android:src="@drawable/stick1"
            android:layout_weight="1"
            android:paddingTop="70dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:onClick="tumi1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="297dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/stick1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingTop="70dp"
            android:scaleType="fitXY"
            android:onClick="tumi2"
            android:clickable="true" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="297dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/stick1"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:paddingTop="70dp" />


    </LinearLayout>

</RelativeLayout>
